<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gameboxnew">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameBox"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">


        <activity android:name=".firsttime.Screen_three"
            android:screenOrientation="portrait" />
        <activity android:name=".firsttime.Screen_two"
            android:screenOrientation="portrait"
            />
        <activity android:name=".firsttime.Screen_one"
            android:screenOrientation="portrait"
            />
        <activity android:name=".No_internet"
            android:screenOrientation="portrait"
            />
        <activity android:name=".Mind"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Cards"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Classic"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Racing"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Action"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GameLoader" />
        <activity
            android:name=".Contact"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Category"
            android:screenOrientation="portrait" />


        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

    </application>

</manifest>